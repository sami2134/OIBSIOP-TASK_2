<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/solution_tv"
        android:layout_above="@id/result_tv"
        android:textAlignment="textEnd"
        android:textSize="32dp"
        android:layout_margin="16dp"
        tools:ignore="SpUsage">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_tv"
        android:layout_above="@id/buttons_layout"
        android:textAlignment="textEnd"
        android:text="0"
        android:textSize="64dp"
        android:layout_margin="16dp"
        tools:ignore="HardcodedText,SpUsage">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#3E48DF4E"
        android:paddingVertical="16dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttons_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="ExtraText">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="C"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/button_c"
                android:backgroundTint="#F44336"
                android:layout_margin="12dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                tools:ignore="HardcodedText,SpUsage">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="("
                android:textSize="32dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/button_open_bracket"
                android:backgroundTint="#673AB7"
                android:layout_margin="12dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                tools:ignore="HardcodedText,SpUsage">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text=")"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/button_close_bracket"
                android:backgroundTint="#673AB7"
                android:layout_margin="12dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                tools:ignore="HardcodedText,SpUsage">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#FF9800"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="32dp"
                android:textStyle="bold"
                app:cornerRadius="36dp"
                tools:ignore="HardcodedText,SpUsage,TextContrastCheck">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="ExtraText">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="7"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/button_7"
                android:backgroundTint="#2196F3"
                android:layout_margin="12dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                tools:ignore="HardcodedText,SpUsage">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="8"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/button_8"
                android:backgroundTint="#2196F3"
                android:layout_margin="12dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                tools:ignore="HardcodedText,SpUsage">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="9"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/button_9"
                android:backgroundTint="#2196F3"
                android:layout_margin="12dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                tools:ignore="HardcodedText,SpUsage">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#FF9800"
                android:text="X"
                android:textColor="@color/white"
                android:textSize="32dp"
                android:textStyle="bold"
                app:cornerRadius="36dp"
                tools:ignore="HardcodedText,SpUsage,TextContrastCheck">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="ExtraText">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="4"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/button_4"
                android:backgroundTint="#2196F3"
                android:layout_margin="12dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                tools:ignore="HardcodedText,SpUsage">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="5"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/button_5"
                android:backgroundTint="#2196F3"
                android:layout_margin="12dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                tools:ignore="HardcodedText,SpUsage">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="6"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/button_6"
                android:backgroundTint="#2196F3"
                android:layout_margin="12dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                tools:ignore="HardcodedText,SpUsage">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#FF9800"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="32dp"
                android:textStyle="bold"
                app:cornerRadius="36dp"
                tools:ignore="HardcodedText,SpUsage,TextContrastCheck">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="ExtraText">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="1"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/button_1"
                android:backgroundTint="#2196F3"
                android:layout_margin="12dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                tools:ignore="HardcodedText,SpUsage">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="2"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/button_2"
                android:backgroundTint="#2196F3"
                android:layout_margin="12dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                tools:ignore="HardcodedText,SpUsage">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="3"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/button_3"
                android:backgroundTint="#2196F3"
                android:layout_margin="12dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                tools:ignore="HardcodedText,SpUsage">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_minus"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#FF9800"
                android:text="-"
                android:textColor="#795548"
                android:textSize="32dp"
                android:textStyle="bold"
                app:cornerRadius="36dp"
                tools:ignore="HardcodedText,SpUsage">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="ExtraText">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_Ac"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#F44336"
                android:text="AC"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold"
                app:cornerRadius="36dp"
                tools:ignore="HardcodedText,SpUsage,TextSizeCheck">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#2196F3"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="32dp"
                android:textStyle="bold"
                app:cornerRadius="36dp"
                tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,SpUsage">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                android:text="."
                android:textSize="32dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/button_dot"
                android:backgroundTint="#2196F3"
                android:layout_margin="12dp"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                tools:ignore="HardcodedText,SpUsage">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_isEqualto"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#FF9800"
                android:text="="
                android:textColor="@color/white"
                android:textSize="32dp"
                android:textStyle="bold"
                app:cornerRadius="36dp"
                tools:ignore="HardcodedText,SpUsage,TextContrastCheck">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
    </LinearLayout>






</RelativeLayout>